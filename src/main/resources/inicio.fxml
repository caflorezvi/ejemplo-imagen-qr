<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="co.edu.uniquindio.ejemplo.controlador.InicioControlador"
      prefHeight="400.0" prefWidth="600.0" spacing="20.0" style="-fx-padding: 20px" >

    <Label text="App de ejemplo" style="-fx-font-size: 15px; -fx-text-fill: blue;" />

    <HBox spacing="20.0" >
        <Button onAction="#seleccionarImagen" text="Seleccionar imagen" />
        <Button onAction="#generarQR" text="Generar un QR" />
    </HBox>

    <ImageView fx:id="imagenSeleccionada" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
    <ImageView fx:id="qrGenerado" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
</VBox>
